# PostgreSQL Database Settings
POSTGRES_USER=admin
POSTGRES_PASSWORD=password
POSTGRES_DB=stagehand

# The full database connection string used by the API
# Note: The hostname 'database' refers to the service name in docker-compose.yml
DATABASE_URL=postgresql://admin:password@db:5432/stagehand?schema=public

# API Port
PORT=3001

# Must be a 32 bit key, generate by running `node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"` in a terminal
ENCRYPTION_KEY=your_generated_key_here

# For transactional emails
RESEND_API_KEY=

# JWT
JWT_SECRET="your_strong_jwt_secret_for_state_tokens"

# GitHub App Integration
GITHUB_APP_NAME="your-github-app-name" # The URL-friendly name of your GitHub App
GITHUB_CLIENT_ID="your_github_app_client_id"
GITHUB_CLIENT_SECRET="your_github_app_client_secret"
GITHUB_PRIVATE_KEY=