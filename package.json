{
  "name": "stagehand",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspaces --if-present",
    "dev:docs": "npm run start --workspace=packages/docs",
    "build": "npm run build --workspaces",
    "build:docs": "npm run build --workspace=packages/docs",
    "serve:docs": "npm run serve --workspace=packages/docs",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "prisma": "prisma"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "prettier": "^3.2.5",
    "prisma": "^6.10.1",
    "react-email": "4.0.16"
  },
  "dependencies": {
    "@prisma/client": "^6.10.1",
    "@react-email/components": "0.1.0",
    "apollo-server-express": "^3.13.0",
    "graphql": "^16.11.0",
    "jsonwebtoken": "^9.0.2",
    "react": "19.1.0",
    "react-dom": "19.1.0"
  }
}
